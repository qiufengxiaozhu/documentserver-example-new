<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.filez.demo.dao.DocControlMapper">

    <!-- Basic result mapping -->
    <resultMap id="BaseResultMap" type="com.filez.demo.entity.DocControlEntity">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="doc_id" property="docId" />
        <result column="permissions_json" property="permissionsJson" />
        <result column="extension_json" property="extensionJson" />
        <result column="watermark_json" property="watermarkJson" />
        <result column="role" property="role" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- Query control configuration by user ID and document ID -->
    <select id="selectByUserIdAndDocId" resultMap="BaseResultMap">
        SELECT 
            id, user_id, doc_id, permissions_json, extension_json, 
            watermark_json, role, create_time, update_time
        FROM doc_control 
        WHERE user_id = #{userId} AND doc_id = #{docId}
        LIMIT 1
    </select>

    <!-- Delete control configuration by user ID -->
    <delete id="deleteByUserId">
        DELETE FROM doc_control WHERE user_id = #{userId}
    </delete>

    <!-- Delete control configuration by document ID -->
    <delete id="deleteByDocId">
        DELETE FROM doc_control WHERE doc_id = #{docId}
    </delete>

</mapper>
